<% images = [ "banner1.jpg" ]%>
<%= render 'shared/banner', images: images %>
<div class="container form-sign-up border p-4 mb-4">
  <div class="d-flex justify-content-center align-items-end">
    <%= image_tag 'profile_picture1.png', class:"img-fluid rounded-circle", style:"width: 100px; height: 120px; margin-right: -50px;" %>
    <%= image_tag 'handshake.png', class:"img-fluid", style:"width: 80px; height: 50px; margin-bottom: -3px; z-index: 1;" %>
    <%= image_tag 'profile_picture2.png', class:"img-fluid rounded-circle", style:"width: 100px; height: 90px; margin-left: -40px; margin-bottom: 15px;" %>
</div>

  <div class="row text-center mt-3">
    <div class="col">
      <h3 class="fw-bold"><%= @bite.name.capitalize %></h3>
      <h6><%= @bite.city.capitalize %> | <%= @bite.meal_type %> | <%= @bite.date.strftime("%d-%m-%Y") %></h6>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col d-flex justify-content-end text-end">
      <span class="mx-2" style="margin-bottom: -8px;">Only for <span style="font-size: 40px; font-weight: bold;"><%= @bite.price %>â‚¬</span></span>

      <% if @guest && @guest.confirmed == true %>
        <button type="button" class="btn btn-primary fs-3 text-light px-4" style="border-radius: 8px;" data-bs-dismiss="modal">Booked</button>

      <% elsif @guest %>
        <div class="d-flex">
          <%= button_to 'Cancel', guest_path(@guest), method: :delete, class:"btn btn-danger fs-3 text-light px-4 mx-2", style:"border-radius: 8px;" %>
          <button type="button" class="btn btn-warning fs-3 text-light px-4" style="border-radius: 8px;" data-bs-dismiss="modal">Pending</button>
        </div>

      <% else %>
        <%= button_to 'Book', book_bite_path(@bite.id), method: :post, class:"btn btn-success fs-3 text-light px-4", style:"border-radius: 8px;" %>
      <% end %>
    </div>
  </div>
</div>
