<div class=" border border-dark mt-4 ms-4">
  <div class="d-flex flex-column justify-content-center align-items-center position-relative mt-4">
    <div class="position-relative">
      <%= image_tag "https://avatars.githubusercontent.com/u/145844680?v=4", class: "avatar-extra-large", alt: "avatar-large" %>
      <div class="d-flex position-absolute justify-content-center align-items-center bottom-0 end-0 pt-2 px-2 bg-white rounded" style="--bs-bg-opacity: .3;">
        <h5><i class="fa-solid fa-star fa-xl" style="color: #FFD43B;"></i><span class="text-sm fw-medium"><%= 7 %></span></h5>
      </div>
    </div>
  </div>

  <!-- user name -->
  <div class="d-flex justify-content-center mt-4 mb-2">
    <h5><strong>Ivan Oliynyk</strong></h5>
  </div>

  <div>
    <% cleanliness_avg = 4%>
    <% location_avg = 7 %>
    <% food_avg = 9 %>
    <% experience_avg = 9 %>
    <% accessibility_avg = 5 %>
  </div>

  <div class="rating-bars px-4">
    <% ratings = { "Cleanliness" => cleanliness_avg, "Location" => location_avg, "Accessibility" => accessibility_avg, "Food" => food_avg } %>
    <% ratings.each do |label, rating| %>
      <div class="mb-3">
        <div>
          <%= "#{label} (#{rating}/10)" %>
        </div>
        <div class="bg-gradient bg-secondary rounded">
          <div class="bar bg-success" style="width: <%= rating.to_i * 10 %>%;"></div>
        </div>
      </div>
    <% end %>
  </div>
</div>
