<div class="col">
  <%= link_to bite_path(bite) do %>
    <div class="dashboard_card w-100 rounded-5 " >

      <!-- Card image -->
      <div class="card-image-top">
        <!-- if photos uploaded -->
        <% if bite.photos.attached? %>
          <%= cl_image_tag bite.photos[0].key, class:"d-block w-100",width: 348, height:230, crop: :fill %>
        <!-- if No photos uploaded -->
        <% else %>
            <%= image_tag 'https://images.unsplash.com/photo-1580151820172-ae6491498c54?q=80&w=2370&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D', class: 'd-block w-100', alt: bite.name, style: 'height: 230px;' %>
        <% end %>
      </div>

      <!-- Card body -->
      <div class="details-card-bite" >
        <h6 class="mb-0 fw-semibold"><%= bite.name.capitalize %></h6>
        <div class="fixed-name-city-height d-flex justify-content-between align-items-end" style="position: relative;">
          <div class="text-body-tertiary">
            <p class="my-0 fs-6"><small><%= bite.city.capitalize %></small></p>
            <p class="fs-6"> <%= bite.date.strftime("%d %b %Y") %></p>
          </div>
          <div>
            <p class="mb-0 fs-3"><span class="fw-medium"><%= bite.price %>â‚¬/<span class="fs-6 fst-italic fw-lighter"><i class="fa-solid fa-user"></i></span></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
