
<!-- Modal -->
<div class="modal fade" id="new-bite" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-scrollable modal-lg">
    <div class="modal-content rounded-4">
      <div class="modal-header bg-body-secondary">
        <h1 class="modal-title fs-5 fw-bolder text-center">Add a new Bite üçï</h1>
        <button type="button ms-5" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body pt-4 pb-2 px-5">
        <%= simple_form_for bite do |f| %>
            <%= f.input :name, as: :string, require: true, input_html: { placeholder: 'e.g: Seafood Spaghetti üçù' } %>
            <%= f.input :date, as: :date, html5: true, required: true %>
            <%= f.input :number_of_guests, as: :integer, required: true, input_html: { min: 1, value: 1 } %>
            <%= f.input :price, as: :float, required: true %>
            <%= f.input :city, as: :string, required: true %>
            <%= f.input :meal_type,
                        required: true,
                        label: 'Meal',
                        collection: ['Breakfast', 'Lunch', 'Brunch', 'Dinner', 'Dessert', 'Snack', 'Drinks', 'Other'],
                        prompt: 'Choose your meal' %>
            <%= f.input :dietary_options, as: :text %>
            <%= f.input :local_drinks, label: 'Alcohol ( Local wines üç∑ | Traditional beer üç∫  )', as: :boolean %>
            <%= f.input :dessert, label: 'Dessert ( Cheesecake üç∞ | Traditional sweets üç° )', as: :boolean %>
            <%= f.input :local_experience, as: :text, input_html: { placeholder: 'e.g: I will teach you "Foxtrot" dance üï∫üèΩüíÉüèΩ' }   %>
            <%= f.input :address, as: :text, required: true %>
            <%= f.input :accessibility, as: :text, required: true %>
            </div>
            <div class="modal-footer bg-body-secondary">
              <button type="button" class="btn btn-secondary text-light" data-bs-dismiss="modal">Close</button>
              <%= f.button :submit, class: 'btn btn-success text-body-secondary me-2' %>
            </div>
        <% end %>
    </div>
  </div>
</div>
