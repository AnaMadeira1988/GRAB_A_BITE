
<!-- Modal -->
<div class="modal fade" id="biteModal<%= bite.id %>" tabindex="-1" aria-labelledby="biteModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content rounded-5">
      <div class="modal-header">
        <div class="d-flex flex-column ps-3 pt-2">
          <h3 class="modal-title fw-bold" id="biteModalLabel"><%= bite.name.capitalize %><span class="fs-6 fw-light"> (<%= bite.meal_type %>)</span></h3>
          <h6><%= bite.city.capitalize %> | <%= bite.date %></h6>
        </div>

        <button type="button" class="btn-close pe-5" data-bs-dismiss="modal" aria-label="Close" style="margin-top: -30px;"></button>
      </div>


      <div id="carouselExample" class="carousel slide">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <%= image_tag 'banner1.jpg', class:"d-block w-100", alt: bite.name %>
          </div>
          <div class="carousel-item">
            <%= image_tag 'banner2.jpg', class:"d-block w-100", alt: bite.name  %>
          </div>
          <div class="carousel-item">
            <%= image_tag 'banner3.jpg', class:"d-block w-100", alt: bite.name  %>
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
      <div class="modal-body pt-0">

        <!-- Inject tags here (dietary_options/accessibility)  -->
        <div class="row justify-content-between mt-2">
          <div class="col-9">
            <p class="fw-bolder">#vegan #glutenfree #halal #elevators #ramp #firstfloor</p>
          </div>

          <!-- Labels -->
          <div class="fs-5 col-2 text-end">
            <i class="fa-solid fa-users"></i> <%= bite.number_of_guests %>

            <% if bite.local_drinks %>
              <i class="fa-solid fa-martini-glass"></i>
            <% end %>

            <% if bite.dessert %>
              <i class="fa-solid fa-ice-cream fa-lg" style="color: #050505;"></i>
            <% end %>
          </div>
        </div>


        <!-- Inject reviews and ratings -->
        <div>
          <div class="d-flex">
            <%= image_tag 'banner1.jpg', class:"avatar-card-bite" %>
            <p class="fs-5 fw-semibold" style=" margin-top: 5px; margin-left: 5px;"><%= "#{bite.user.first_name} #{bite.user.last_name}" %></p>
          </div>
          <div class="d-flex">
            <p style="margin-left: 37px; margin-top: -13px;  margin-bottom: 0;"><i class="fa-solid fa-star" style="color: #ffd500;"></i><span>4</span></p>
            <p style="margin-left: 85px; margin-top: -18px; margin-bottom: 0;">(579 reviews)</p>
          </div>
        </div>


        <!-- working on description section of bite show -->
        <div class="card" style="border: none;">
          <div class="card-body">
          <blockquote class="blockquote mb-0">
            <h4 style="margin-left: -10px"> Who am I? </h4>
            <p> <%= bite.user.description %> </p>
          </blockquote>
          <hr>
          <blockquote class="blockquote mb-0">
            <h4 style="margin-left: -10px"> What surprises do I have? </h4>
            <p> <%= bite.local_experience %> </p>
          </blockquote>
          </div>
        </div>
      </div>

      <div class="modal-footer" style="padding-right: 30px; border-top: none;">
        <span class="my-auto mr-2">Only for <span style="font-size: 25px; font-weight: bold;"><%= bite.price %>â‚¬</span></span>
        <button type="button" class="btn btn-success rounded" data-bs-dismiss="modal">Book</button>
      </div>
    </div>
  </div>
</div>
