<div class="navbar navbar-expand-sm navbar-light navbar-lewagon" style="background-color: rgba(202,157,157);">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "logo2.png" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to "New bite", new_bite_path, class: "nav-link btn btn-outline-light custom-btn" %>
          </li>
          <li class="nav-item">
            <%= link_to "Dashboard", dashboard_path, class: "nav-link btn btn-outline-light custom-btn" %>
          </li>

          <div class="nav-item dropdown m-15" style="padding: 25px;">
          <a href="#" class="sino" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <i class="fa-regular fa-bell fa-lg m-13" id="notification" style="bottom: 23px;position: absolute;right: 23px;color: black;"></i>
          <span style="position: absolute;bottom: 29px;right: 6px;background: red;color: white;border-radius: 50%;padding: 0 5px;">10</span>
          </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown"style="width: 300px;">
              <%= link_to "Action", "#", class: "dropdown-item" %>
              <%= link_to "Another action", "#", class: "dropdown-item" %>
              <%= link_to "Something else here", "#", class: "dropdown-item" %>
            </div>
          </div>

          <li class="nav-item dropdown">
            <a href="#" class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">

              <% if current_user.photo.attached? %>
                <%= cl_image_tag current_user.photo.key, class: "avatar",crop: :crop %>
              <% else %>
                <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar" %>
              <% end %>

            </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "My Profile", dashboard_path, class: "dropdown-item" %>
              <%= link_to 'Account settings', edit_user_registration_path, class: "dropdown-item" %>

              <%= link_to 'Log out', destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>

        <% else %>
          <li class="nav-item d-flex">
            <%= link_to "Login", new_user_session_path, class: "nav-link btn btn-outline-light custom-btn mr-2" %>
            <%= link_to "Sign up", new_user_registration_path, class: "nav-link btn btn-outline-light custom-btn" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
